$('#event_dialog').html('<%= j render "show" %>');
$('#detail_event').dialog(
    {
        modal: true,
        minWidth: 400,
        position: { at: event_position, of: window },

        create: function( event, ui ) {
            $('.dialog-dropdown').prependTo('.ui-dialog-titlebar');
        },

        open: function(){
            $(document).bind('click', function(e){
                if(!$(e.target).is('.ui-dialog, a') && !$(e.target).closest('.ui-dialog').length){
                    $('.ui-dialog-content').dialog('close');
                }
            });
            $('.ui-dialog-content').on("dialogclose", function() {
                $('.ui-dialog-content').dialog('destroy')
                $('#event_dialog').html('')
            });
        }
    }
)
